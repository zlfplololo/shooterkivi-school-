#:set color_cosmos 0.2, 0, 0.1, 1


<MainScreen>:
    MDBoxLayout: 
        orientation: 'vertical'     
        padding: '50dp' 
        spacing: '30dp'
        MDIconButton:
            icon: "cog"
            pos_hint: {"right": 1, "top": 1}
            icon_size: '50dp'
        Image:
            source: 'assets/images/rocket.png'
            size_hint_y: 0.7
            size: dp(50), dp(50)
            allow_stretch: True
        MDRectangleFlatButton:
            text: "PLAY"
            font_size: '60sp'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press:
                root.manager.current = 'game'

<Ship>:
    size_hint: None, None
    # canvas.before:
    #     Color: 
    #         rgba: 1, 0, 0, 1
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

<PlayerShip>:
    source: 'assets/images/rocket.png'
    size: dp(100), dp(243)


<EnemyShip@Ship>:
    source: 'assets/images/ufo.png'

<GameScreen>:
    MDFloatLayout:
        md_bg_color: color_cosmos
        MDFloatLayout:
            id: game
            MDFloatLayout:
                id: back
            MDFloatLayout:
                id: front
                PlayerShip:  
                    id: ship
                    pos: root.center_x, dp(50)     

        MDFloatLayout:
            id: interface
            MDBoxLayout:
                spacing: dp(50)
                padding: dp(20)
                pos_hint: {"top": 1}
                size_hint_y: None
                height: dp(50)
                MDIcon:
                    icon: "heart"
                    font_size: '60sp'
                    size_hint: None, None
                    pos_hint: {"top": 1}
                    color: 1, 0, 0, 1
                MDProgressBar:
                    id: hp_status
                    value:  (ship.hp / ship.max_hp) * 100
                    height: '50dp'
                    size_hint_y: None
                    pos_hint: {"top": 1}
                    color: app.theme_cls.accent_color
                MDFloatingActionButton:
                    icon: "pause"
                    pos_hint: {'top': 1}
                    on_press: root.show_menu()

            MDBoxLayout:
                spacing: dp(20)
                padding: dp(20)
                MDFloatingActionButton:
                    icon: "arrow-left-bold"
                    on_press: root.pressKey('left')
                    on_release: root.releaseKey('left')

                MDFloatingActionButton:
                    icon: "arrow-right-bold"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.pressKey('right')
                    on_release: root.releaseKey('right')
                Widget:
                MDFloatingActionButton:
                    icon: "arrow-up-bold"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.pressKey('shot')
                    on_release: root.releaseKey('shot')
                MDFloatingActionButton:
                    icon: "mine"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.pressKey('mina')
                    on_release: root.releaseKey('mina')


<Shot>:
    size_hint: None, None
    size: 20, 20
    md_bg_color: app.theme_cls.accent_color

<Mine>:
    size_hint: None, None
    source: "assets/images/mine.png"
    size: dp(150), dp(150)
    opacity: 1
    
<GameOverScreen>:
    MDBoxLayout: 
        orientation: 'vertical'     
        padding: '50dp' 
        spacing: '30dp'
        MDLabel:
            text: "GAME OVER"
            font_size: '100sp'
            color: app.theme_cls.accent_color
            halign: 'center'
        MDIcon:
            icon: "skull"
            font_size: '220sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5}
            color: app.theme_cls.accent_color
        Widget:
            size_hint_y: 0.5
        MDRectangleFlatButton:
            text: "MENU"
            font_size: '60sp'
            pos_hint: {'center_x': 0.5}
            on_press:
                root.manager.current = 'main'